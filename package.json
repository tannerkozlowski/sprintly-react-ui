{
  "name": "sprintly-uikit",
  "title": "Sprintly UIKit",
  "description": "A React-based UI Kit for building Sprintly interfaces",
  "version": "0.1.0",
  "main": "./src/js/index.js",
  "homepage": "https://github.com/sprintly/sprintly-uikit",
  "repository": {
    "type": "git",
    "url": "https://github.com/sprintly/sprintly-uikit.git"
  },
  "bugs": {
    "url": "https://github.com/sprintly/sprintly-uikit/issues"
  },
  "dependencies": {
    "fuzzy": "^0.1.0",
    "react": "^0.11.2"
  },
  "devDependencies": {
    "browserify": "^4.2.3",
    "browserify-istanbul": "^0.1.2",
    "chai": "^1.9.1",
    "coveralls": "^2.11.2",
    "es5-shim": "^4.0.3",
    "gulp": "^3.8.9",
    "gulp-connect": "^2.2.0",
    "gulp-istanbul": "^0.3.1",
    "gulp-mocha-phantomjs": "^0.5.1",
    "istanbul": "^0.3.2",
    "jquery": "^2.1.1",
    "lodash": "^2.4.1",
    "mocha": "^1.21.4",
    "reactify": "^0.14.0",
    "sinon": "^1.11.1",
    "uglify-js": "^2.4.14",
    "underscore": "^1.7.0",
    "watchify": "^0.10.2"
  },
  "scripts": {
    "watch": "watchify src/js/index.js -o dist/sprintly-uikit.js -t reactify -d -v",
    "build": "browserify src/js/index.js -s SprintlyUIKit -u react -o dist/sprintly-uikit.js",
    "build-production": "npm run build && npm run minify",
    "watch-test": "watchify test/index.js -o build/test/index.js -t reactify -d -v",
    "build-test": "browserify test/index.js -t reactify -o build/test/index.js",
    "setup-tests": "npm run build-production && npm run build-test",
    "test": "node node_modules/gulp/bin/gulp.js test",
    "build-coverage": "browserify -t reactify -t browserify-istanbul test/index.js -o build/test/test.js -d",
    "coveralls-reporting": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "minify": "cat dist/sprintly-uikit.js | uglifyjs -cm > dist/sprintly-uikit.min.js"
  },
  "browserify": {
    "transform": [
      ["reactify", {"es6": true}]
    ],
    "ignore": "sinon"
  },
  "directories": {
    "docs": "docs",
    "example": "example",
    "src": "src",
    "test": "test"
  },
  "keywords": [
    "sprintly",
    "react",
    "ui kit",
    "ui-kit",
    "ui library",
    "component library"
  ],
  "author": {
    "name": "Quick Left Team",
    "url": "http://quickleft.com/"
  },
  "license": "BSD"
}