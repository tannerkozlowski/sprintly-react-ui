{
  "name": "sprintly-uikit",
  "title": "Sprintly UIKit",
  "description": "A React-based UI Kit for building Sprintly interfaces",
  "version": "0.1.0",
  "main": "./src/js/index.js",
  "homepage": "https://github.com/sprintly/sprintly-uikit",
  "repository": {
    "type": "git",
    "url": "https://github.com/sprintly/sprintly-uikit.git"
  },
  "bugs": {
    "url": "https://github.com/sprintly/sprintly-uikit/issues"
  },
  "dependencies": {
    "fuzzy": "^0.1.0",
    "react": "^0.11.2"
  },
  "devDependencies": {
    "browserify": "^4.2.3",
    "browserify-istanbul": "^0.1.2",
    "chai": "^1.9.1",
    "connect": "^3.3.3",
    "coveralls": "^2.11.2",
    "es5-shim": "^4.0.3",
    "gulp": "^3.8.9",
    "gulp-connect": "^2.2.0",
    "gulp-istanbul": "^0.3.1",
    "gulp-mocha-phantomjs": "^0.5.1",
    "gulp-sourcemaps": "^1.2.8",
    "gulp-util": "^3.0.1",
    "istanbul": "^0.3.2",
    "jquery": "^2.1.1",
    "lodash": "^2.4.1",
    "mocha": "^1.21.4",
    "open":"^0.0.5",
    "phantomjs": "^1.9.12",
    "react-tools": "^0.12.0",
    "reactify": "^0.14.0",
    "serve-static": "^1.7.1",
    "sinon": "^1.11.1",
    "uglify-js" : "^2.4.15",
    "underscore": "^1.7.0",
    "vinyl-source-stream": "^1.0.0",
    "vinyl-transform": "^1.0.0",
    "watchify": "^0.10.2"
  },
  "scripts": {
    "dev": "./node_modules/gulp/bin/gulp.js build && ./node_modules/gulp/bin/gulp.js dev-server",
    "test": "./node_modules/gulp/bin/gulp.js test && ./node_modules/gulp/bin/gulp.js test-server",
    "test-cli": "./node_modules/gulp/bin/gulp.js test",
    "coverage": "./node_modules/gulp/bin/gulp.js test-coverage && istanbul report --root coverage lcov && mv coverage/ test/",
    "coveralls": "cat test/coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "package-distro": "./node_modules/gulp/bin/gulp.js build && cat dist/sprintly-ui.js | uglifyjs -cm > dist/sprintly-ui.min.js",
    "clean": "rm test/build.js && rm -rf test/coverage/"
  },
  "browserify": {
    "transform": [
      ["reactify", {"es6": true}],
      ["browserify-istanbul", {"ignore": ["**/node_modules/**", "**/test/**"]}]
    ],
    "ignore": "sinon",
    "standalone": "SprintlyUI"
  },
  "directories": {
    "docs": "docs",
    "example": "example",
    "src": "src",
    "test": "test"
  },
  "keywords": [
    "sprintly",
    "react",
    "ui kit",
    "ui-kit",
    "ui library",
    "component library"
  ],
  "author": {
    "name": "Quick Left Team",
    "url": "http://quickleft.com/"
  },
  "license": "BSD"
}