{
  "name": "sprintly-ui",
  "title": "Sprintly UI",
  "description": "A React-based UI kit for building Sprintly interfaces",
  "version": "1.0.0",
  "main": "./src/index.js",
  "homepage": "https://github.com/sprintly/sprintly-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/sprintly/sprintly-ui.git"
  },
  "bugs": {
    "url": "https://github.com/sprintly/sprintly-ui/issues"
  },
  "dependencies": {
    "browserify-istanbul": "^0.1.4",
    "fuzzy": "^0.1.0",
    "jquery": "^2.1.3",
    "lodash": "^2.4.1",
    "moment": "^2.9.0",
    "object-path": "^0.9.0",
    "react": "^0.12.2",
    "react-onclickoutside": "^0.2.0"
  },
  "devDependencies": {
    "browserify": "^8.1.0",
    "chai": "^1.10.0",
    "clean-css": "^3.1.6",
    "connect": "^3.3.3",
    "coveralls": "^2.11.2",
    "es5-shim": "^4.0.5",
    "gulp": "^3.8.10",
    "gulp-less": "^3.0.1",
    "gulp-mocha-phantomjs": "^0.5.1",
    "gulp-sourcemaps": "^1.5.0",
    "istanbul": "^0.3.5",
    "mocha": "^2.0.1",
    "open": "^0.0.5",
    "react-tools": "^0.12.0",
    "reactify": "^0.17.1",
    "serve-static": "^1.8.0",
    "sinon": "^1.12.1",
    "uglify-js": "^2.4.15",
    "vinyl-source-stream": "^1.0.0",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "dev": "gulp build && npm run build-css && gulp dev-server",
    "test": "gulp test && gulp test-server",
    "test-cli": "gulp test",
    "test-browser": "gulp test-server",
    "coverage": "gulp test-coverage && istanbul report --root coverage lcov && mv coverage/ test/",
    "coveralls": "cat test/coverage/lcov.info | coveralls",
    "build-css": "gulp less && cat dist/css/sprintly-ui.css | cleancss > dist/css/sprintly-ui.min.css",
    "prepublish": "gulp build && cat dist/js/sprintly-ui.js | uglifyjs -cm > dist/js/sprintly-ui.min.js",
    "clean": "rm test/build.js && rm -rf test/coverage/"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ],
      [
        "browserify-istanbul",
        {
          "ignore": [
            "**/node_modules/**",
            "**/test/**"
          ]
        }
      ]
    ],
    "ignore": "sinon"
  },
  "directories": {
    "docs": "docs",
    "examples": "examples",
    "src": "src",
    "test": "test"
  },
  "keywords": [
    "sprintly",
    "react",
    "ui kit",
    "ui-kit",
    "ui library",
    "components",
    "ui components",
    "component library",
    "quickleft",
    "quick left"
  ],
  "author": {
    "name": "Quick Left Team",
    "url": "http://quickleft.com/"
  },
  "license": "BSD"
}
